{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src", // Root directory is set to src only
    "outDir": "./build", // Output directory for compiled files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src" // Include only the src folder for TypeScript compilation
  ],
  "exclude": [
    "api", // Exclude the api folder from TypeScript compilation
    "node_modules"
  ]
}